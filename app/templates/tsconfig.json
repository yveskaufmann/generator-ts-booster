{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ]
  },
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}
